<p id="notice"><%= notice %></p>

<h1>Listing Features</h1>

<table>
  <thead>
    <tr>
      <th>Ticket</th>
      <th>Name</th>
      <th>Description</th>
      <th>No of days</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.ticket_id %></td>
        <td><%= feature.name %></td>
        <td><%= feature.description %></td>
        <td><%= feature.no_of_days %></td>
        <td><%= feature.start_date %></td>
        <td><%= feature.end_date %></td>
        <td><%= link_to 'Show', feature %></td>
        <td><%= link_to 'Edit', edit_feature_path(feature) %></td>
        <td><%= link_to 'Destroy', feature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

