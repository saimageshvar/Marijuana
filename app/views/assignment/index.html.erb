<div class="row m-md p-md grey lighten-4">
	<h5 class="grey-text text-darken-1">Assign It!</h5>
	<%= form_for(@assignment) do |f| %>
		<div class="input-field col s12">
			<%= f.select("feature", options_from_collection_for_select(@features, "id", "ticket_id")) %>
			<label>Feature</label>
		</div>
		<div class="input-field col s12">
			<%= f.select("user", options_from_collection_for_select(@developers, "id", "email", @developers.first.id), {}, {multiple: true}) %>
			<label>Developer</label>
		</div>
		<a href="javascript:$('form').submit();" type="submit" name="action" class="btn">Submit</a>
	<% end %>
</div>

<div class="divider m-md"></div>

<div class="row m-xs">
	<% @assignments.each do |assignment| %>
		<div class="row">
			<div class="col s12">
				<div class="card">
					<div class="card-content">
						<span class="card-title p-b-md"><%= assignment.feature.name %></span>
						<p><%= assignment.feature.description %></p>
					</div>
					<div class="card-action">
						<a href="#">asd</a>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>

<%= javascript_tag do %>
	$(document).ready(function() {
    $('select').material_select();
  });
<% end %>