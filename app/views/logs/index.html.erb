<div class="row m-md p-md grey lighten-4">
  <h5 class="grey-text text-darken-1">Log It!</h5>
  <%= form_for(@log) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="input-field col s12">
      <%= f.select(:user_feature_id, options_from_collection_for_select(current_user.user_features, "id", "id")) %>
    </div>
    <div class="input-field col s12">
      <%= f.text_field :duration %>
    </div>
    <div class="input-field col s12">
      <%= f.text_field :description %>
    </div>
    <a href="javascript:$('form').submit();" type="submit" name="action" class="btn">Submit</a>
  <% end %>
</div>

<div class="divider m-md"></div>

<div class="row m-xs">
  <% @logs.each do |log| %>
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <span class="card-title p-b-md"><%= "asd" %></span>
          </div>
          <div class="card-action">
            <a href="#">asd</a>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= javascript_tag do %>
  $(document).ready(function() {
    $('select').material_select();
  });
<% end %>